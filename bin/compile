#!/bin/sh

set -e

BUILD_DIR=$1
CACHE_DIR=$2

# config
VERSION="1.9.8"

# Buildpack URL
ARCHIVE_NAME=phantomjs-W-flash-${VERSION}-linux-x86_64
FILE_NAME=${ARCHIVE_NAME}.tar.bz2
BUILDPACK_PHANTOMJS_PACKAGE=https://bitbucket.org/araghava92/phantomjs-w-flash/downloads/${FILE_NAME}

mkdir -p $CACHE_DIR
if ! [ -e $CACHE_DIR/$FILE_NAME ]; then
  echo "-----> Fetching PhantomJS ${VERSION} binaries at ${BUILDPACK_PHANTOMJS_PACKAGE}"
  curl $BUILDPACK_PHANTOMJS_PACKAGE -L -s -o $CACHE_DIR/$FILE_NAME
fi

echo "-----> Extracting PhantomJS ${VERSION} binaries to ${BUILD_DIR}/vendor/phantomjs"
mkdir -p $CACHE_DIR/$ARCHIVE_NAME
mkdir -p $BUILD_DIR/vendor/phantomjs
tar xjf $CACHE_DIR/$FILE_NAME -C $CACHE_DIR/$ARCHIVE_NAME
mv $CACHE_DIR/$ARCHIVE_NAME $BUILD_DIR/vendor/phantomjs

echo "-----> Installing Dependancies"
echo "-----> Installing libgstreamer-plugins-base0.10-0_0.10.28-1_amd64.deb"
dpkg -i vendor/phantomjs/phantomjs-W-flash-1.9.8-linux-x86_64/phantomjs-1.9.8-linux-x86_64/libgstreamer-plugins-base0.10-0_0.10.28-1_amd64.deb

echo "-----> exporting PATH and LIBRARY_PATH"
PROFILE_PATH="$BUILD_DIR/.profile.d/phantomjs.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:vendor/phantomjs/phantomjs-W-flash-1.9.8-linux-x86_64/phantomjs-1.9.8-linux-x86_64/bin"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:vendor/phantomjs/phantomjs-W-flash-1.9.8-linux-x86_64/phantomjs-1.9.8-linux-x86_64/lib"' >> $PROFILE_PATH
